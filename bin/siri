#!/usr/bin/env python
import sys
import time
import keyboard


def trigger_siri():
    print("...")
    keyboard.press('command+space')
    time.sleep(0.5)
    keyboard.release('command+space')
    time.sleep(0.2)  # Wait for Siri to load


if __name__ == '__main__':
    trigger_siri()
    print("sending command")
    keyboard.write(sys.argv[1])
    keyboard.send('enter')
